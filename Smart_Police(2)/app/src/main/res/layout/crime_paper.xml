<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_table"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-00029-00"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70sp"
                android:layout_height="match_parent"
                android:background="@drawable/grid_table"
                android:gravity="center"
                android:text="일시"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/grid_table"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="70sp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="장소"
                android:textSize="20sp"
                android:background="@drawable/grid_table" />

            <TextView
                android:id="@+id/where"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@drawable/grid_table"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="주민번호"
            android:gravity="center"/>

        <EditText
            android:id="@+id/personNo_n"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:maxLength="6"
            android:nextFocusDown="@+id/personNo_t"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/grid_table"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_weight="0.3"
            android:text="-" />

        <EditText
            android:id="@+id/personNo_t"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:maxLength="7"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/grid_table"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="성명"
            android:gravity="center"/>

        <EditText
            android:id="@+id/personName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="홍길동"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="주소"
            android:gravity="center"/>

        <TextView
            android:id="@+id/personAddress"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/grid_table"/>

        <ImageButton
            android:id="@+id/addressSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="상세주소"
            android:gravity="center"/>

        <EditText
            android:id="@+id/personDetailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="100호"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="휴대폰"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/phone_n"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_weight="0.3"
            android:text="-" />

        <EditText
            android:id="@+id/phone_t"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:maxLength="4"
            android:nextFocusDown="@+id/phone_h"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/grid_table"/>

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_weight="0.3"
            android:text="-" />

        <EditText
            android:id="@+id/phone_h"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:maxLength="4"
            android:nextFocusDown="@+id/license_n"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/grid_table"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="적용법조"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/rule"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="범칙내용"
            android:gravity="center"/>

        <EditText
            android:id="@+id/crimeCase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="안전벨트 미착용"
            android:inputType="textPersonName" />
    </LinearLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인" />

</LinearLayout>